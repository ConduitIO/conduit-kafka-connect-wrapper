<configuration>
    <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>
        <encoder>
            <pattern>[%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="io.conduit" level="DEBUG"/>

    <root level="DEBUG">
        <appender-ref ref="STDERR"/>
    </root>
</configuration>
